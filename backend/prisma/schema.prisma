generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums based on frontend metric types and monitoring statuses
enum StatusType {
  SUCCESS
  ERROR
  WARNING
}

// User model for authentication
model User {
  id        Int             @id @default(autoincrement())
  name      String
  email     String          @unique
  password  String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  fields    Field[]
  readings  SensorReading[]
  farms     Farm[]
}

// A Field represents a physical area / sensor group (e.g., Field A)
model Field {
  id        Int             @id @default(autoincrement())
  name      String
  location  String?
  userId    Int
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  farmId    Int?
  farm      Farm?           @relation(fields: [farmId], references: [id], onDelete: Cascade)
  createdAt DateTime        @default(now())
  readings  SensorReading[]

  @@index([userId])
}

// A Farm groups multiple fields (one farm can have many fields)
model Farm {
  id        Int      @id @default(autoincrement())
  name      String
  location  String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  fields    Field[]
  completed Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
}

// Single sensor reading row with all sensor values
model SensorReading {
  id           Int       @id @default(autoincrement())
  soilMoisture Float?    // %
  temperature  Float?    // Â°C
  co2          Float?    // ppm
  nitrate      Float?    // mg/L
  ph           Float?    // pH scale
  timestamp    DateTime  @default(now())
  fieldId      Int
  field        Field     @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  userId       Int
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([fieldId])
  @@index([userId])
}

// Recommendations extracted/shown by the frontend
model Recommendation {
  id        Int      @id @default(autoincrement())
  text      String
  severity  Int?
  createdAt DateTime @default(now())
}

// Monitoring status records for sensors
model MonitoringStatus {
  id        Int      @id @default(autoincrement())
  label     String
  status    String
  type      StatusType
  updatedAt DateTime @updatedAt
}
